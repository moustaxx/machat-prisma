{
    "name": "machat-server",
    "author": "moustaxx",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "node ./dist",
        "clean": "rm -rf dist",
        "build": "yarn clean && yarn generate && tsc",
        "generate": "yarn generate:prisma && yarn generate:nexus",
        "generate:prisma": "prisma generate",
        "generate:nexus": "ts-node --transpile-only ./src/schema",
        "postinstall": "yarn generate",
        "test": "jest",
        "lint": "eslint --ignore-path .gitignore --cache --ext .ts,.tsx ./src",
        "dev": "tsnd --respawn --transpile-only --ignore-watch ./src/generated --cache-directory ./.yarn/.cache/tsnd ./src/start",
        "debug": "tsnd --inspect --respawn --transpile-only --ignore-watch ./src/generated --cache-directory ./.yarn/.cache/tsnd ./src/start"
    },
    "resolutions": {
        "eslint-config-airbnb-typescript/@typescript-eslint/parser": "^4.15.1",
        "eslint-config-airbnb-typescript/eslint-config-airbnb": "*",
        "eslint-config-airbnb-typescript/eslint-config-airbnb-base": "*"
    },
    "dependencies": {
        "@devoxa/prisma-relay-cursor-connection": "^1.1.1",
        "@prisma/client": "^2.17.0",
        "apollo-server-errors": "^2.4.2",
        "argon2": "^0.27.1",
        "connect-pg-simple": "^6.2.1",
        "dotenv": "^8.2.0",
        "fastify": "^3.12.0",
        "fastify-cookie": "^5.1.0",
        "fastify-cors": "^5.2.0",
        "fastify-session": "patch:fastify-session@^5.2.1#./.yarn/patches/fastify-session_fix-FastifyDeprecation.diff",
        "graphql": "^15.5.0",
        "graphql-scalars": "^1.7.1",
        "mercurius": "^7.0.0",
        "nexus": "^1.0.0",
        "nexus-plugin-prisma": "^0.30.0",
        "prisma-machat": "link:./prisma/client"
    },
    "devDependencies": {
        "@types/connect-pg-simple": "^4.2.2",
        "@types/eslint": "^7.2.6",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.28",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "eslint": "^7.20.0",
        "eslint-config-airbnb-typescript": "^12.3.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.5",
        "jest": "^26.6.3",
        "jest-environment-node": "^26.6.2",
        "light-my-request": "^4.4.1",
        "pg": "^8.5.1",
        "prisma": "^2.17.0",
        "ts-jest": "^26.5.1",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.1",
        "typescript": "^4.1.5"
    }
}
